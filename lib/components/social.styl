/**  COMPONENTE SOCIAL
 **------------------------------------------*/
.social
  bottom -40px
  position absolute
  right -16px
  text-align right
  width 208px

  &__link
    box-sizing border-box
    color white
    display inline-block
    font-size 24px
    height 40px
    line-height 40px
    position relative
    text-align center
    text-decoration none
    width 52px
    border-radius 50%
    transform scale3d(0, 0, 0)

    //borde del hover de los links
    &::before
      background-color $accent-color
      bottom 0
      content ''
      height 3px
      left 0
      position absolute
      transform scale3d(0, 1, 1)
      transition transform .15s linear
      width 100%

    //hover que activa el borde de los links
    &:hover:before
      transform scale3d(1, 1, 1)

    //link IconFonts
    &:nth-child(1)::after
      content '\f343'
    &:nth-child(2)::after
      content '\f360'
    &:nth-child(3)::after
      content '\f33f'
    &:nth-child(4)::after
      content '\f34f'

    //link backgrounds
    &:nth-child(odd)
      background-color rgba(white, .1)
    &:nth-child(even)
      background-color rgba(white, .3)

@media screen and (max-width: 410px)
  .social
    right -14px

@media screen and (max-width: 330px)
  .social
    right -16px
